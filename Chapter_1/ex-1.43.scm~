;; EXercise 1.43
;;
;; Question: Create a procedure repeated that takes as its argument a procedure of one parameter
;; and composes the procedure n times.

(define (compose f g)
  (lambda (x) (f (g x))))

(define (repeated f n)
  (define (repeat i) ; i-th iteration
    (if (= i n) (lambda (x) (f x))
        (compose (repeat (+ i 1)) f)))
  (repeat 1))

